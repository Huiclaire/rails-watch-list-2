<div class="cover d-flex align-items-center justify-content-center mb-3">
  <h2>Save any kind of movies</h2>
</div>

<div class="container">
  <% if @lists.empty? %>
  <h3>No lists yet...</h3>
  <% else %>
  <h1 class="mt-4 mb-2">My Lists</h1>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="co-12 col-sm-6 col-md-4 mb-3">
          <%# list cards %>
          <%= link_to list_path(list), class:"text-decoration-none" do%>
            <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/random')">
              <%= list.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%# <div class="create-list">
    <h3 class="mt-4 mb-2 create-list"> Add new list</h3>
    <%= render 'form', list: @list %>


 <%# Form for new list %>

  <div class="py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="create-list rounded p-3 shadow">
          <h3>Add new list</h3>
          <%= simple_form_for @list do |f| %>
            <%= f.input :name, placeholder: 'Drama' %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: 'btn btn-gradient' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
