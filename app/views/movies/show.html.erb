<div>
  <img src="<%= @movie.poster_url %>" alt="<%= @movie.title %>">
  <img src="<%= @movie.backdrop_path %>" alt="<%= @movie.title %>">
  <h1><%= @movie.title %></h1>
  <p><%= @movie.release_date %></p>
  <br>
  <p><%= @movie.overview %></p>
  <p>Rating: <%= "⭐️" * @movie.rating %></p>

  Add to list

  <% @lists.each do |list| %>
      <%= button_to list.name, movie_bookmarks_path(@movie, bookmark: { list_id: list.id }), data: { "turbo_method": :post } %>
  <% end %>
</div>
